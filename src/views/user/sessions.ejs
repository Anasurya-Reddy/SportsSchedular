<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Sessions - Sports Scheduler</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/user/dashboard">
                <i class="fas fa-trophy me-2"></i>Sports Scheduler
            </a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/user/dashboard">Dashboard</a>
                <a class="nav-link active" href="/user/sessions">My Sessions</a>
                <a class="nav-link" href="/user/requests">My Requests</a>
                <a class="nav-link" href="/user/profile">Profile</a>
                <form action="/auth/logout" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-outline-light btn-sm">Logout</button>
                </form>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h2><i class="fas fa-calendar me-2"></i>My Sessions</h2>

        <!-- Available Sessions -->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h4>Available Sessions</h4>
            </div>
            <div class="card-body">
                <% if (available.length === 0) { %>
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-calendar-times fa-3x mb-3"></i>
                        <p>No available sessions at the moment</p>
                    </div>
                <% } else { %>
                    <div class="row">
                        <% available.forEach(session => { %>
                            <div class="col-md-6 mb-3">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <i class="fas fa-futbol me-2 text-primary"></i>
                                            <%= session.sportId.name %>
                                        </h5>
                                        <p class="card-text">
                                            <i class="fas fa-calendar me-2"></i>
                                            <%= new Date(session.startsAt).toLocaleDateString() %>
                                        </p>
                                        <p class="card-text">
                                            <i class="fas fa-clock me-2"></i>
                                            <%= new Date(session.startsAt).toLocaleTimeString() %>
                                        </p>
                                        <p class="card-text">
                                            <i class="fas fa-map-marker-alt me-2"></i>
                                            <%= session.venue %>
                                        </p>
                                        <a href="/sessions/<%= session._id %>" class="btn btn-primary">View Details</a>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- My Joined Sessions -->
        <div class="card">
            <div class="card-header bg-success text-white">
                <h4>My Joined Sessions</h4>
            </div>
            <div class="card-body">
                <% if (joined.length === 0) { %>
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-handshake fa-3x mb-3"></i>
                        <p>You haven't joined any sessions yet</p>
                    </div>
                <% } else { %>
                    <div class="row">
                        <% joined.forEach(session => { %>
                            <div class="col-md-6 mb-3">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <i class="fas fa-futbol me-2 text-success"></i>
                                            <%= session.sportId.name %>
                                        </h5>
                                        <p class="card-text">
                                            <i class="fas fa-calendar me-2"></i>
                                            <%= new Date(session.startsAt).toLocaleDateString() %>
                                        </p>
                                        <p class="card-text">
                                            <i class="fas fa-map-marker-alt me-2"></i>
                                            <%= session.venue %>
                                        </p>
                                        <a href="/sessions/<%= session._id %>" class="btn btn-success">View Details</a>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
