<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sessions - Sports Scheduler</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="<%= currentUser && currentUser.role === 'admin' ? '/admin/dashboard' : '/user/dashboard' %>">
                <i class="fas fa-trophy me-2"></i>Sports Scheduler
            </a>
            <div class="navbar-nav ms-auto">
                <% if (currentUser) { %>
                    <a class="nav-link" href="<%= currentUser.role === 'admin' ? '/admin/dashboard' : '/user/dashboard' %>">Dashboard</a>
                    <a class="nav-link active" href="/sessions">Sessions</a>
                    <% if (currentUser.role === 'admin') { %>
                        <a class="nav-link" href="/admin/requests">Requests</a>
                        <a class="nav-link" href="/admin/reports">Reports</a>
                    <% } else { %>
                        <a class="nav-link" href="/user/requests">My Requests</a>
                    <% } %>
                    <form action="/auth/logout" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-outline-light btn-sm">Logout</button>
                    </form>
                <% } %>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h2><i class="fas fa-calendar me-2"></i>Sessions</h2>
        
        <% if (currentUser && currentUser.role === 'admin') { %>
            <div class="mb-4">
                <a href="/sessions/new" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Create New Session
                </a>
            </div>
        <% } %>

        <!-- Available Sessions -->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="fas fa-calendar-plus me-2"></i>Available Sessions</h4>
            </div>
            <div class="card-body">
                <% if (available.length === 0) { %>
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-calendar-times fa-3x mb-3"></i>
                        <p>No available sessions at the moment</p>
                    </div>
                <% } else { %>
                    <div class="row">
                        <% available.forEach(ss => { %>
                            <div class="col-md-6 mb-3">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <i class="fas fa-futbol me-2 text-primary"></i>
                                            <%= ss.sportId.name %>
                                        </h5>
                                        <p class="card-text">
                                            <i class="fas fa-calendar me-2"></i>
                                            <%= new Date(ss.startsAt).toLocaleDateString() %>
                                        </p>
                                        <p class="card-text">
                                            <i class="fas fa-clock me-2"></i>
                                            <%= new Date(ss.startsAt).toLocaleTimeString() %>
                                        </p>
                                        <p class="card-text">
                                            <i class="fas fa-map-marker-alt me-2"></i>
                                            <%= ss.venue %>
                                        </p>
                                        <a href="/sessions/<%= ss._id %>" class="btn btn-primary">View Details</a>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- My Sessions (for admins) -->
        <% if (currentUser && currentUser.role === 'admin' && mine.length > 0) { %>
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="fas fa-calendar-check me-2"></i>My Created Sessions</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <% mine.forEach(ss => { %>
                            <div class="col-md-6 mb-3">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <i class="fas fa-futbol me-2 text-success"></i>
                                            <%= ss.sportId.name %>
                                        </h5>
                                        <p class="card-text">
                                            <i class="fas fa-calendar me-2"></i>
                                            <%= new Date(ss.startsAt).toLocaleDateString() %>
                                        </p>
                                        <p class="card-text">
                                            <i class="fas fa-map-marker-alt me-2"></i>
                                            <%= ss.venue %>
                                        </p>
                                        <span class="badge bg-<%= ss.status === 'scheduled' ? 'success' : ss.status === 'cancelled' ? 'danger' : 'warning' %>">
                                            <%= ss.status.charAt(0).toUpperCase() + ss.status.slice(1) %>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                </div>
            </div>
        <% } %>

        <!-- Joined Sessions (for users) -->
        <% if (currentUser && currentUser.role === 'player' && joined.length > 0) { %>
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="fas fa-handshake me-2"></i>My Joined Sessions</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <% joined.forEach(ss => { %>
                            <div class="col-md-6 mb-3">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <i class="fas fa-futbol me-2 text-info"></i>
                                            <%= ss.sportId.name %>
                                        </h5>
                                        <p class="card-text">
                                            <i class="fas fa-calendar me-2"></i>
                                            <%= new Date(ss.startsAt).toLocaleDateString() %>
                                        </p>
                                        <p class="card-text">
                                            <i class="fas fa-map-marker-alt me-2"></i>
                                            <%= ss.venue %>
                                        </p>
                                        <a href="/sessions/<%= ss._id %>" class="btn btn-info">View Details</a>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                </div>
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>




