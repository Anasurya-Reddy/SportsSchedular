<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>New Session - Sports Scheduler</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
	<link rel="stylesheet" href="/css/sessions.css">
</head>
<body>
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
		<div class="container">
			<a class="navbar-brand" href="/">Sports Scheduler</a>
			<div class="navbar-nav ms-auto">
				<a class="nav-link" href="/sessions">Sessions</a>
			</div>
		</div>
	</nav>

	<div class="container mt-4">
		<div class="card p-4">
			<h2 class="mb-3">Create New Session</h2>
			<form method="post" action="/sessions">
				<div class="mb-3">
					<label class="form-label">Sport</label>
					<select class="form-select" name="sportId" required>
						<% if (sports && sports.length > 0) { %>
							<% sports.forEach(s => { %>
								<option value="<%= s._id %>"><%= s.name %></option>
							<% }) %>
						<% } else { %>
							<option value="">No sports available</option>
						<% } %>
					</select>
				</div>

				<div class="mb-3 text-muted">Debug: <%= sports ? sports.length : 'sports is undefined' %> sports found</div>

				<div class="mb-3">
					<label class="form-label">Date & Time</label>
					<input type="datetime-local" class="form-control" name="startsAt" required>
				</div>

				<div class="mb-3">
					<label class="form-label">Venue</label>
					<input type="text" class="form-control" name="venue" required>
				</div>

				<div class="mb-3">
					<label class="form-label">Looking For (number)</label>
					<input type="number" class="form-control" name="lookingForCount" min="0" value="0" required>
				</div>

				<button class="btn btn-primary">Create</button>
				<a href="/sessions" class="btn btn-secondary ms-2">Back</a>
			</form>
		</div>
	</div>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>




