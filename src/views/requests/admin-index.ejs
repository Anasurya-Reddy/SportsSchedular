<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Requests - Sports Scheduler</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">üèÜ Sports Scheduler</a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/">Home</a>
                <a class="nav-link" href="/sessions">All Sessions</a>
                <a class="nav-link" href="/sports">Manage Sports</a>
                <a class="nav-link" href="/reports">Reports</a>
                <form action="/auth/logout" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-outline-light btn-sm">Logout</button>
                </form>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h2>Manage Join Requests</h2>

        <% if (flash.success && flash.success.length > 0) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= flash.success[0] %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <% if (flash.error && flash.error.length > 0) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= flash.error[0] %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <!-- Pending Requests -->
        <div class="card mb-4">
            <div class="card-header bg-warning text-dark">
                <h4>Pending Requests (<%= pendingRequests.length %>)</h4>
            </div>
            <div class="card-body">
                <% if (pendingRequests.length === 0) { %>
                    <p class="text-muted">No pending requests</p>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>User</th>
                                    <th>Sport</th>
                                    <th>Session Date</th>
                                    <th>Venue</th>
                                    <th>Requested At</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% pendingRequests.forEach(request => { %>
                                    <tr>
                                        <td><%= request.userId.name %><br><small class="text-muted"><%= request.userId.email %></small></td>
                                        <td><%= request.sessionId.sportId.name %></td>
                                        <td><%= new Date(request.sessionId.startsAt).toLocaleString() %></td>
                                        <td><%= request.sessionId.venue %></td>
                                        <td><%= new Date(request.requestedAt).toLocaleString() %></td>
                                        <td>
                                            <form method="POST" action="/requests/<%= request._id %>/approve" class="d-inline">
                                                <button type="submit" class="btn btn-success btn-sm me-2">Approve</button>
                                            </form>
                                            <form method="POST" action="/requests/<%= request._id %>/reject" class="d-inline">
                                                <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                                            </form>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- Approved Requests -->
        <div class="card mb-4">
            <div class="card-header bg-success text-white">
                <h4>Approved Requests (<%= approvedRequests.length %>)</h4>
            </div>
            <div class="card-body">
                <% if (approvedRequests.length === 0) { %>
                    <p class="text-muted">No approved requests</p>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>User</th>
                                    <th>Sport</th>
                                    <th>Session Date</th>
                                    <th>Venue</th>
                                    <th>Approved At</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% approvedRequests.forEach(request => { %>
                                    <tr>
                                        <td><%= request.userId.name %><br><small class="text-muted"><%= request.userId.email %></small></td>
                                        <td><%= request.sessionId.sportId.name %></td>
                                        <td><%= new Date(request.sessionId.startsAt).toLocaleString() %></td>
                                        <td><%= request.sessionId.venue %></td>
                                        <td><%= new Date(request.approvedAt).toLocaleString() %></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- Rejected Requests -->
        <div class="card mb-4">
            <div class="card-header bg-danger text-white">
                <h4>Rejected Requests (<%= rejectedRequests.length %>)</h4>
            </div>
            <div class="card-body">
                <% if (rejectedRequests.length === 0) { %>
                    <p class="text-muted">No rejected requests</p>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>User</th>
                                    <th>Sport</th>
                                    <th>Session Date</th>
                                    <th>Venue</th>
                                    <th>Rejected At</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% rejectedRequests.forEach(request => { %>
                                    <tr>
                                        <td><%= request.userId.name %><br><small class="text-muted"><%= request.userId.email %></small></td>
                                        <td><%= request.sessionId.sportId.name %></td>
                                        <td><%= new Date(request.sessionId.startsAt).toLocaleString() %></td>
                                        <td><%= request.sessionId.venue %></td>
                                        <td><%= new Date(request.updatedAt).toLocaleString() %></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
