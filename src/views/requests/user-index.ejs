<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Requests - Sports Scheduler</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">üèÜ Sports Scheduler</a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/">Home</a>
                <a class="nav-link" href="/sessions">My Sessions</a>
                <a class="nav-link" href="/requests/my">My Requests</a>
                <form action="/auth/logout" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-outline-light btn-sm">Logout</button>
                </form>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h2>My Join Requests</h2>

        <% if (flash.success && flash.success.length > 0) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= flash.success[0] %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <% if (flash.error && flash.error.length > 0) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= flash.error[0] %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <% if (userRequests.length === 0) { %>
            <div class="alert alert-info">
                <h4>No requests yet</h4>
                <p>You haven't requested to join any sessions yet. <a href="/sessions">Browse available sessions</a> to get started!</p>
            </div>
        <% } else { %>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Sport</th>
                            <th>Session Date</th>
                            <th>Venue</th>
                            <th>Status</th>
                            <th>Requested At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% userRequests.forEach(request => { %>
                            <tr>
                                <td><%= request.sessionId.sportId.name %></td>
                                <td><%= new Date(request.sessionId.startsAt).toLocaleString() %></td>
                                <td><%= request.sessionId.venue %></td>
                                <td>
                                    <% if (request.status === 'pending') { %>
                                        <span class="badge bg-warning">Pending</span>
                                    <% } else if (request.status === 'approved') { %>
                                        <span class="badge bg-success">Approved</span>
                                    <% } else if (request.status === 'rejected') { %>
                                        <span class="badge bg-danger">Rejected</span>
                                    <% } %>
                                </td>
                                <td><%= new Date(request.requestedAt).toLocaleString() %></td>
                                <td>
                                    <% if (request.status === 'pending') { %>
                                        <form method="POST" action="/requests/<%= request._id %>/cancel" class="d-inline">
                                            <button type="submit" class="btn btn-outline-danger btn-sm" 
                                                    onclick="return confirm('Are you sure you want to cancel this request?')">
                                                Cancel
                                            </button>
                                        </form>
                                    <% } else if (request.status === 'approved') { %>
                                        <a href="/sessions/<%= request.sessionId._id %>" class="btn btn-outline-primary btn-sm">View Session</a>
                                    <% } else { %>
                                        <span class="text-muted">No actions available</span>
                                    <% } %>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
